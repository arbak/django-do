# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,*.ondigitalocean.app

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3

# Subpath Configuration (for /manager/ routing)
FORCE_SCRIPT_NAME=/manager

# CSRF and Security Settings
CSRF_TRUSTED_ORIGINS=https://your-app-name.ondigitalocean.app,https://*.ondigitalocean.app

# Superuser Configuration
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Static Files Configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Django Settings Module
DJANGO_SETTINGS_MODULE=myproject.settings

# Port Configuration (for DigitalOcean)
PORT=8080

# SSL and Security
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_SSL_REDIRECT=False
